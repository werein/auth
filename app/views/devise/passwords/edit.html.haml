.panel.panel-default
  .panel-heading= t '.title'
  .panel-body
    = devise_error_messages!
    = semantic_form_for resource, as: resource_name, url: password_path(resource_name), method: :put do |f|
      = f.inputs do
      = f.input :reset_password_token, as: :hidden
      = f.input :password, label: false
      = f.input :password_confirmation, label: false
      = f.actions do 
        = f.action :submit, label: t('.submit')
    .login-or
      %hr.hr-or
        %span.span-or or
    = render "devise/shared/providers"
  .panel-footer= render "devise/shared/links"