- unless signed_in?
  = link_to t('.sign_in'), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations' and !signed_in?
  = link_to t('.sign_up'), new_registration_path(resource_name)
  %br/ 
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' and !signed_in?
  = link_to t('.forgot_password'), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('.didnt_received_confirmation_instruction'), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' and !signed_in?
  = link_to t('.didnt_received_unlock_instruction'), new_unlock_path(resource_name)
  %br/
- if signed_in?
  = link_to t('.account_settings'), edit_registration_path(resource_name)
