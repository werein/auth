#content
  .col-md-6
    %legend= t '.title'
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), method: :put do |f|
      = f.input :name, input_html: { class: 'span12' }
      = f.input :email, input_html: { class: 'span12' }
      = f.input :avatar, input_html: { class: 'span12' }
      = t('.waiting', email: resource.unconfirmed_email) if devise_mapping.confirmable? && resource.pending_reconfirmation?
      = f.input :password, label: false, input_html: { class: 'span12' }
      = f.input :password_confirmation, label: false, hint: t('.hint.password'), input_html: { class: 'span12' }
      = f.input :current_password, hint: t('.hint.current_password'), input_html: { class: 'span12' }
      = f.button :submit, t('.submit'), class: 'btn btn-info btn-block'
  .col-md-6.right
    %legend= t '.alternatives'
    = render "devise/shared/providers"
    = render "devise/shared/links"