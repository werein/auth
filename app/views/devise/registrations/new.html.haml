.panel.panel-default
  .panel-heading= t '.title'
  .panel-body
    = devise_error_messages!
    = semantic_form_for :user, as: resource_name, url: registration_path(resource_name) do |f|
      = f.inputs do
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
      = f.actions do 
        = f.action :submit, label: t('.submit')
    .login-or
      %hr.hr-or
        %span.span-or or
    = render "devise/shared/providers"
  .panel-footer= render "devise/shared/links"