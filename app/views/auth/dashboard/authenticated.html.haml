#content
  .span8.offset2
    .row-fluid
      .span5
        .row-fluid
          %legend= editable @user, :name, e: @user.name
          = image_tag @user.avatar.thumb if @user.avatar?
      .span5.offset2.right
        %legend= t '.alternatives'
        = link_to t('.public_profile'), @user, class: 'btn btn-block'
        = link_to t('.edit'), edit_user_registration_path, class: 'btn btn-block'
        = link_to t('.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-block btn-danger'